{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",   // <- important pour Expo + subpaths Firebase
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"]
  },
  "include": ["app", "lib", "types"]
}
